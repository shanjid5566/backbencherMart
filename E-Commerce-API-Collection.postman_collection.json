{
  "info": {
    "name": "E-Commerce App - Organized Collection",
    "description": "APIs grouped by Website, User Dashboard, and Admin. GET requests include sample filter bodies for reference.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.2"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000", "type": "string" },
    { "key": "authToken", "value": "", "type": "string" }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [ { "key": "token", "value": "{{authToken}}", "type": "string" } ]
  },
  "item": [
    {
      "name": "Website",
      "item": [
        {
          "name": "Authentication",
          "item": [
            {
              "name": "Register User",
              "request": {
                "method": "POST",
                "header": [ { "key": "Content-Type", "value": "application/json" } ],
                "body": { "mode": "raw", "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"Password123!\"\n}" },
                "url": { "raw": "{{baseUrl}}/api/v1/auth/register", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","register"] },
                "description": "Register new user. Required: name, email, password."
              },
              "response": []
            },
            {
              "name": "Login User",
              "event": [
                {
                  "listen": "test",
                  "script": {
                    "exec": [
                      "if (pm.response.code === 200) {",
                      "  var json = pm.response.json();",
                      "  if (json.token) pm.collectionVariables.set('authToken', json.token);",
                      "}"
                    ],
                    "type": "text/javascript"
                  }
                }
              ],
              "request": {
                "method": "POST",
                "header": [ { "key": "Content-Type", "value": "application/json" } ],
                "body": { "mode": "raw", "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"Password123!\"\n}" },
                "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] },
                "description": "Login. Required: email, password. Saves token to authToken."
              },
              "response": []
            }
          ]
        },
        {
          "name": "Products",
          "item": [
            {
              "name": "Get All Products (public)",
              "request": {
                "method": "GET",
                "header": [ { "key": "Content-Type", "value": "application/json" } ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"page\": 1,\n  \"limit\": 20,\n  \"category\": \"Electronics\",\n  \"dressStyle\": \"Casual\",\n  \"q\": \"laptop\",\n  \"sort\": \"-price\"\n}\n// Use these as query params; body shown for reference."
                },
                "url": { "raw": "{{baseUrl}}/api/products", "host": ["{{baseUrl}}"], "path": ["api","products"] },
                "description": "Filters supported via query: page, limit, category, dressStyle, q, sort."
              },
              "response": []
            },
            {
              "name": "Get Product by ID (public)",
              "request": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/api/products/:id",
                  "host": ["{{baseUrl}}"],
                  "path": ["api","products",":id"],
                  "variable": [ { "key": "id", "value": "65f1234567890abcdef12345" } ]
                },
                "description": "Returns single product."
              },
              "response": []
            }
          ]
        },
        {
          "name": "FAQ",
          "item": [
            {
              "name": "Get FAQs by Product (public)",
              "request": {
                "method": "GET",
                "header": [],
                "url": {
                  "raw": "{{baseUrl}}/api/faqs/:productId",
                  "host": ["{{baseUrl}}"],
                  "path": ["api","faqs",":productId"],
                  "variable": [ { "key": "productId", "value": "65f1234567890abcdef12345" } ]
                },
                "description": "List FAQs for product. Optional query: page, limit, sort, fields."
              },
              "response": []
            }
          ]
        }
      ]
    },
    {
      "name": "User Dashboard",
      "item": [
        {
          "name": "Get User Profile",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
            "url": { "raw": "{{baseUrl}}/api/user/profile", "host": ["{{baseUrl}}"], "path": ["api","user","profile"] },
            "description": "Auth required."
          },
          "response": []
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "PUT",
            "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
            "body": { "mode": "raw", "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/user/profile", "host": ["{{baseUrl}}"], "path": ["api","user","profile"] },
            "description": "Auth required. Send fields to update."
          },
          "response": []
        },
        {
          "name": "Get User Orders",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
            "body": { "mode": "raw", "raw": "{\n  \"status\": \"delivered\"\n}\n// Use query param status in real call." },
            "url": { "raw": "{{baseUrl}}/api/user/orders", "host": ["{{baseUrl}}"], "path": ["api","user","orders"] },
            "description": "Auth required. Optional query: status (processing|shipped|delivered|cancelled)."
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Products",
          "item": [
            {
              "name": "Create Product",
              "request": {
                "method": "POST",
                "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "body": {
                  "mode": "formdata",
                  "formdata": [
                    { "key": "name", "value": "Premium Laptop", "type": "text" },
                    { "key": "price", "value": "1299.99", "type": "text" },
                    { "key": "category", "value": "Electronics", "type": "text" },
                    { "key": "dressStyle", "value": "Casual", "type": "text" },
                    { "key": "stock", "value": "50", "type": "text" },
                    { "key": "description", "value": "High-performance laptop", "type": "text" },
                    { "key": "colors", "value": "black,gray", "type": "text", "disabled": true },
                    { "key": "sizes", "value": "M,L", "type": "text", "disabled": true },
                    { "key": "inStock", "value": "true", "type": "text", "disabled": true },
                    { "key": "images", "type": "file", "src": "", "description": "Attach images", "disabled": true }
                  ]
                },
                "url": { "raw": "{{baseUrl}}/api/admin/products", "host": ["{{baseUrl}}"], "path": ["api","admin","products"] },
                "description": "Admin only. Required: name, price, category, dressStyle, stock, description."
              },
              "response": []
            },
            {
              "name": "Update Product",
              "request": {
                "method": "PUT",
                "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "body": { "mode": "raw", "raw": "{\n  \"price\": 1199.99,\n  \"stock\": 45\n}" },
                "url": { "raw": "{{baseUrl}}/api/admin/products/:id", "host": ["{{baseUrl}}"], "path": ["api","admin","products",":id"], "variable": [ { "key": "id", "value": "65f1234567890abcdef12345" } ] },
                "description": "Admin only. Body: fields to update."
              },
              "response": []
            },
            {
              "name": "Delete Product",
              "request": {
                "method": "DELETE",
                "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "url": { "raw": "{{baseUrl}}/api/admin/products/:id", "host": ["{{baseUrl}}"], "path": ["api","admin","products",":id"], "variable": [ { "key": "id", "value": "65f1234567890abcdef12345" } ] },
                "description": "Admin only."
              },
              "response": []
            }
          ]
        },
        {
          "name": "Users",
          "item": [
            {
              "name": "Get All Users",
              "request": {
                "method": "GET",
                "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "body": { "mode": "raw", "raw": "{\n  \"page\": 1,\n  \"limit\": 20,\n  \"search\": \"john\",\n  \"role\": \"admin\",\n  \"status\": \"verified\"\n}\n// Use as query params in real call." },
                "url": { "raw": "{{baseUrl}}/api/admin/users?page=1&limit=20", "host": ["{{baseUrl}}"], "path": ["api","admin","users"], "query": [ { "key": "page", "value": "1" }, { "key": "limit", "value": "20" } ] },
                "description": "Admin only. Filters: page, limit, search, role, status (verified|unverified)."
              },
              "response": []
            },
            {
              "name": "Update User",
              "request": {
                "method": "PATCH",
                "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "body": { "mode": "raw", "raw": "{\n  \"firstName\": \"Alex\",\n  \"role\": \"admin\",\n  \"isVerified\": true\n}" },
                "url": { "raw": "{{baseUrl}}/api/admin/users/:userId", "host": ["{{baseUrl}}"], "path": ["api","admin","users",":userId"], "variable": [ { "key": "userId", "value": "65f1234567890abcdef12345" } ] },
                "description": "Admin only. Allowed: firstName, lastName, role, isVerified."
              },
              "response": []
            },
            {
              "name": "Delete User",
              "request": {
                "method": "DELETE",
                "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "url": { "raw": "{{baseUrl}}/api/admin/users/:userId", "host": ["{{baseUrl}}"], "path": ["api","admin","users",":userId"], "variable": [ { "key": "userId", "value": "65f1234567890abcdef12345" } ] },
                "description": "Admin only."
              },
              "response": []
            }
          ]
        },
        {
          "name": "Orders",
          "item": [
            {
              "name": "Get All Orders",
              "request": {
                "method": "GET",
                "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "body": { "mode": "raw", "raw": "{\n  \"page\": 1,\n  \"limit\": 20,\n  \"status\": \"processing\",\n  \"search\": \"ORD-123\"\n}\n// Use query params in real call." },
                "url": { "raw": "{{baseUrl}}/api/admin/orders?page=1&limit=20", "host": ["{{baseUrl}}"], "path": ["api","admin","orders"], "query": [ { "key": "page", "value": "1" }, { "key": "limit", "value": "20" } ] },
                "description": "Admin only. Filters: status (all|processing|shipped|delivered|cancelled|refunded), search (orderId)."
              },
              "response": []
            },
            {
              "name": "Update Order Status",
              "request": {
                "method": "PATCH",
                "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "body": { "mode": "raw", "raw": "{\n  \"status\": \"shipped\"\n}" },
                "url": { "raw": "{{baseUrl}}/api/admin/orders/:orderId/status", "host": ["{{baseUrl}}"], "path": ["api","admin","orders",":orderId","status"], "variable": [ { "key": "orderId", "value": "65f1234567890abcdef12345" } ] },
                "description": "Admin only. Required: status (processing|shipped|delivered|cancelled|refunded)."
              },
              "response": []
            }
          ]
        },
        {
          "name": "Reviews",
          "item": [
            {
              "name": "Get All Reviews",
              "request": {
                "method": "GET",
                "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "body": { "mode": "raw", "raw": "{\n  \"page\": 1,\n  \"limit\": 20,\n  \"productId\": \"65f1234567890abcdef12345\",\n  \"rating\": 4\n}\n// Use query params in real call." },
                "url": { "raw": "{{baseUrl}}/api/admin/reviews?page=1&limit=20", "host": ["{{baseUrl}}"], "path": ["api","admin","reviews"], "query": [ { "key": "page", "value": "1" }, { "key": "limit", "value": "20" } ] },
                "description": "Admin only. Filters: productId, rating, page, limit."
              },
              "response": []
            },
            {
              "name": "Delete Review",
              "request": {
                "method": "DELETE",
                "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "url": { "raw": "{{baseUrl}}/api/admin/reviews/:reviewId", "host": ["{{baseUrl}}"], "path": ["api","admin","reviews",":reviewId"], "variable": [ { "key": "reviewId", "value": "65f1234567890abcdef12345" } ] },
                "description": "Admin only."
              },
              "response": []
            }
          ]
        },
        {
          "name": "Analytics",
          "item": [
            {
              "name": "Sales by Category (dressStyle)",
              "request": {
                "method": "GET",
                "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "url": { "raw": "{{baseUrl}}/api/admin/analytics/sales-by-category", "host": ["{{baseUrl}}"], "path": ["api","admin","analytics","sales-by-category"] },
                "description": "Groups by dressStyle: Casual, Formal, Party, Gym."
              },
              "response": []
            }
          ]
        },
        {
          "name": "FAQ",
          "item": [
            {
              "name": "Create FAQ",
              "request": {
                "method": "POST",
                "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "body": { "mode": "raw", "raw": "{\n  \"question\": \"How long does shipping take?\",\n  \"answer\": \"3-5 business days.\"\n}" },
                "url": { "raw": "{{baseUrl}}/api/faqs/:productId", "host": ["{{baseUrl}}"], "path": ["api","faqs",":productId"], "variable": [ { "key": "productId", "value": "65f1234567890abcdef12345" } ] },
                "description": "Admin only. Required: question, answer."
              },
              "response": []
            },
            {
              "name": "Update FAQ",
              "request": {
                "method": "PATCH",
                "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "body": { "mode": "raw", "raw": "{\n  \"question\": \"Updated?\",\n  \"answer\": \"Yes.\"\n}" },
                "url": { "raw": "{{baseUrl}}/api/faqs/:faqId", "host": ["{{baseUrl}}"], "path": ["api","faqs",":faqId"], "variable": [ { "key": "faqId", "value": "65f1234567890abcdef12345" } ] },
                "description": "Admin only."
              },
              "response": []
            },
            {
              "name": "Delete FAQ",
              "request": {
                "method": "DELETE",
                "header": [ { "key": "Authorization", "value": "Bearer {{authToken}}" } ],
                "url": { "raw": "{{baseUrl}}/api/faqs/:faqId", "host": ["{{baseUrl}}"], "path": ["api","faqs",":faqId"], "variable": [ { "key": "faqId", "value": "65f1234567890abcdef12345" } ] },
                "description": "Admin only."
              },
              "response": []
            }
          ]
        }
      ]
    }
  ]
}
