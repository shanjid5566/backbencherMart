        {
          "name": "Create Checkout Session",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    console.log('Checkout URL:', jsonData.url);",
                  "    console.log('Session ID:', jsonData.sessionId);",
