            "body": {
              "mode": "raw",
              "raw": "{\n  \"metadata\": {\n    \"email\": \"customer@example.com\",\n    \"shippingAddress\": {\n      \"street\": \"123 Main Street\",\n      \"city\": \"New York\",\n      \"state\": \"NY\",\n      \"zip\": \"10001\",\n      \"country\": \"US\"\n    },\n    \"phone\": \"+1 (555) 123-4567\",\n    \"notes\": \"Please deliver between 9am-5pm\"\n  }\n}"
            },
